{
  "name": "@resreq/event-hub",
  "version": "1.2.0",
  "description": "This is a minimalist event hub.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && tsc",
    "test": "jest",
    "lint": "eslint src __tests__ --ext .js,.ts --cache --fix",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/molvqingtai/event-hub.git"
  },
  "keywords": [
    "event-hub",
    "event-bus",
    "bus",
    "hub",
    "event",
    "trigger",
    "dispatch"
  ],
  "author": "molvqingtai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/molvqingtai/event-hub/issues"
  },
  "homepage": "https://github.com/molvqingtai/event-hub#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-angular": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "release-it": "^14.7.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "__tests__/**/*.{js,ts}": "eslint --cache --fix"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run test"
      ],
      "after:bump": "npm run build",
      "after:git:release": "echo After git push, before github release",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "git": {
      "commitMessage": "feat: :package: release ${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "name": "@resreq/event-hub"
  }
}
